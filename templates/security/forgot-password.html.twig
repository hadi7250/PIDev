  <!-- Custom JavaScript -->
  <script>
    $(document).ready(function() {
      // Form validation
      $('form').on('submit', function(e) {
        e.preventDefault();
        
        const emailInput = $('input[type="email"]');
        const email = emailInput.val();
        
        if (!email) {
          showAlert('Please enter your email address.', 'danger');
          emailInput.focus();
          return;
        }
        
        if (!isValidEmail(email)) {
          showAlert('Please enter a valid email address.', 'danger');
          emailInput.focus();
          return;
        }
        
        // Simulate API call
        showAlert('Password reset link has been sent to your email!', 'success');
        
        // In a real application, you would submit the form here
        // this.submit();
      });
      
      function isValidEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
      }
      
      function showAlert(message, type) {
        // Remove existing alerts
        $('.custom-alert').remove();
        
        // Create alert
        const alertHtml = `
          <div class="custom-alert alert alert-${type} alert-dismissible fade show position-fixed" 
               style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        `;
        
        $('body').append(alertHtml);
        
        // Auto remove after 5 seconds
        setTimeout(() => {
          $('.custom-alert').alert('close');
        }, 5000);
      }
      
      // Initialize Perfect Scrollbar if needed
      if ($('.perfect-scrollbar').length) {
        new PerfectScrollbar('.perfect-scrollbar');
      }
      
      // Initialize Metis Menu if needed
      if ($('.metismenu').length) {
        $('.metismenu').metisMenu();
      }
    });
  </script>

