{% extends 'base.html.twig' %}

{% block title %}Evaluations{% endblock %}
{% block page_title %}Evaluations{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <form method="GET" action="{{ path('evaluation_index') }}" class="row g-3">
                        <div class="col-md-6">
                            <label for="keyword" class="form-label"><i class="fas fa-search"></i> Search</label>
                            <input type="text" name="keyword" id="keyword" class="form-control" 
                                   placeholder="Search by title or description..." 
                                   value="{{ app.request.query.get('keyword', '') }}">
                        </div>
                        <div class="col-md-4">
                            <label for="type" class="form-label"><i class="fas fa-filter"></i> Type</label>
                            <select name="type" id="type" class="form-select">
                                <option value="">All Types</option>
                                <option value="exam" {% if app.request.query.get('type') == 'exam' %}selected{% endif %}>Exam</option>
                                <option value="quiz" {% if app.request.query.get('type') == 'quiz' %}selected{% endif %}>Quiz</option>
                                <option value="project" {% if app.request.query.get('type') == 'project' %}selected{% endif %}>Project</option>
                                <option value="oral" {% if app.request.query.get('type') == 'oral' %}selected{% endif %}>Oral</option>
                                <option value="homework" {% if app.request.query.get('type') == 'homework' %}selected{% endif %}>Homework</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-list-check"></i> All Evaluations
                    </h3>
                    <a href="{{ path('evaluation_new') }}" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Create New
                    </a>
                </div>
                <div class="card-body">
                    {% if evaluations is empty %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No evaluations found. 
                            <a href="{{ path('evaluation_new') }}">Create one now</a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Type</th>
                                        <th>Competence</th>
                                        <th>Date</th>
                                        <th>Weight</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for evaluation in evaluations %}
                                        <tr>
                                            <td><strong>#{{ evaluation.id }}</strong></td>
                                            <td>{{ evaluation.title }}</td>
                                            <td>
                                                {% if evaluation.type == 'exam' %}
                                                    <span class="badge bg-danger">Exam</span>
                                                {% elseif evaluation.type == 'quiz' %}
                                                    <span class="badge bg-info">Quiz</span>
                                                {% elseif evaluation.type == 'project' %}
                                                    <span class="badge bg-warning">Project</span>
                                                {% elseif evaluation.type == 'oral' %}
                                                    <span class="badge bg-success">Oral</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Homework</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('competence_show', {'id': evaluation.competence.id}) }}" 
                                                   class="text-decoration-none">
                                                    {{ evaluation.competence.name }}
                                                </a>
                                            </td>
                                            <td>{{ evaluation.evaluationDate|date('Y-m-d') }}</td>
                                            <td>
                                                <div style="width: 60px; height: 20px; background: linear-gradient(90deg, #94a3b8, #cbd5e1); border-radius: 3px; display: flex; align-items: center; justify-content: center; color: white; font-size: 11px; font-weight: bold;">
                                                    {{ evaluation.weight }}%
                                                </div>
                                            </td>
                                            <td>
                                                <a href="{{ path('evaluation_show', {'id': evaluation.id}) }}" 
                                                   class="btn btn-sm btn-info" title="View">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}" 
                                                   class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="POST" action="{{ path('evaluation_delete', {'id': evaluation.id}) }}" 
                                                      style="display: inline;" onsubmit="return confirm('Are you sure?');">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evaluation.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
