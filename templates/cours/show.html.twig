{% extends 'base.html.twig' %}

{% block title %}{{ course.titre }} | Details{% endblock %}

{% block stylesheets %}
<style>
    /* 1. Fix the Footer Blocking Content */
    .course-content-section {
        padding-top: 60px;
        padding-bottom: 200px !important; /* Huge padding to prevent footer overlap */
        min-height: 100vh; /* Ensures page is tall enough */
    }

    /* 2. Page Title Area */
    .page-title {
        background: linear-gradient(135deg, #0066cc 0%, #004d99 100%);
        padding: 60px 0;
        position: relative;
    }
    .page-title h2 { 
        color: #ffffff !important; /* Force White */
        font-weight: 700;
    }
    .bread-crumb li, .bread-crumb li a { 
        color: rgba(255,255,255,0.8) !important; 
    }
    
    /* 3. Chapter List Styling (Dark Mode Friendly) */
    .chapter-item {
        border: 1px solid #333; /* Dark border */
        margin-bottom: 10px;
        border-radius: 6px;
        overflow: hidden;
        background-color: #1a1a1a; /* Dark background for the item */
    }
    
    .chapter-link {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        background: #222; /* Slightly lighter dark for the button */
        color: #ffffff !important; /* Force Chapter Names White */
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .chapter-link:hover { 
        background: #333; 
        color: #00bfff !important; /* Light blue on hover */
    }

    /* 4. Content Area (Where the video is) */
    .content-text { 
        padding: 20px; 
        background: #111; /* Very dark background for content */
        color: #ddd; /* Light grey text */
        border-top: 1px solid #333; 
    }
    .content-text a { color: #00bfff; }

    /* Video Container */
    .video-responsive {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
        height: 0;
        overflow: hidden;
        margin-top: 15px;
        margin-bottom: 15px;
        border-radius: 8px;
        border: 1px solid #444;
    }
    .video-responsive iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>
<script async src="//www.instagram.com/embed.js"></script>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
{% endblock %}

{% block body %}
    <section class="page-title">
        <div class="auto-container">
            <h2>{{ course.titre }}</h2>
            <ul class="bread-crumb clearfix">
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_cours_index') }}">Courses</a></li>
                <li>{{ course.titre }}</li>
            </ul>
        </div>
    </section>

    <section class="course-content-section">
        <div class="auto-container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="chapter-list">
                        <div class="p-3 border-bottom mb-3">
                            <h4 class="mb-0" style="color: white;">Course Chapters</h4>
                        </div>
                        
                        {% for chapter in chapters %}
                            <div class="chapter-item">
                                <a class="chapter-link" data-bs-toggle="collapse" href="#chapter-{{ chapter.id }}" role="button" aria-expanded="false">
                                    <span>
                                        <i class="fa fa-file-text me-2"></i> {{ chapter.titre }}
                                    </span>
                                    <i class="fa fa-chevron-down"></i>
                                </a>

                                <div class="collapse {% if loop.first %}show{% endif %}" id="chapter-{{ chapter.id }}">
                                    <div class="content-text">
                                        {# Use 'raw' because we added safe HTML (iframes) in the Controller #}
                                        {{ chapter.contenu|raw|nl2br }}
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center p-5">
                                <p style="color: white;">No chapters available for this course yet.</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}