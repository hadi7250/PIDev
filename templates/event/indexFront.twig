<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>{% block title %}EduConnect{% endblock %}</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicon (√©vite 404) -->
    <link href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üìÖ</text></svg>" rel="icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS (fichiers dans public/assets) -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/assets/sass/main.css" rel="stylesheet">
    <style>
        /* Styles header front EduConnect */
        .navbar-educonnect { background: #fff; box-shadow: 0 2px 12px rgba(0,0,0,.08); }
        .navbar-educonnect .navbar-brand { font-weight: 700; font-size: 1.5rem; color: #0d6efd !important; }
        .navbar-educonnect .nav-link { color: #495057 !important; font-weight: 500; padding: 0.5rem 1rem !important; border-radius: 0.375rem; }
        .navbar-educonnect .nav-link:hover { color: #0d6efd !important; background: rgba(13, 110, 253, 0.08); }
        .navbar-educonnect .nav-link.active { color: #0d6efd !important; background: rgba(13, 110, 253, 0.1); }
        .page-title .heading { background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%); color: #fff; padding: 2rem 0; }
        .page-title .heading .text-muted { color: rgba(255,255,255,0.9) !important; }
        .section { padding: 3rem 0; }
        .footer { background: #f8f9fa; padding: 1.5rem 0; margin-top: 3rem; color: #6c757d; }
    </style>
</head>

<body>
<header id="header" class="navbar navbar-expand-lg navbar-educonnect sticky-top">
    <div class="container">
        <a href="{{ path('app_front_office') }}" class="navbar-brand">EduConnect</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu" aria-controls="navmenu" aria-expanded="false" aria-label="Menu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <nav class="collapse navbar-collapse" id="navmenu">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-1 align-items-center">
                <li class="nav-item"><a href="{{ path('app_front_office') }}" class="nav-link {{ app.request.get('_route') == 'app_front_office' ? 'active' : '' }}">Home</a></li>
                <li class="nav-item"><a href="{{ path('app_inscription_front') }}" class="nav-link {{ app.request.get('_route') == 'app_inscription_front' ? 'active' : '' }}">Inscription</a></li>
                <li class="nav-item"><a href="{{ path('app_event_index_front') }}" class="nav-link {{ app.request.get('_route') == 'app_event_index_front' ? 'active' : '' }}">Events</a></li>
                <li class="nav-item"><a href="{{ path('app_test_index_front') }}" class="nav-link {{ app.request.get('_route') == 'app_test_index_front' ? 'active' : '' }}">Tests</a></li>
                {% if app.user %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle me-1"></i> {{ app.user.userIdentifier }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a class="dropdown-item" href="{{ path('app_back_office') }}"><i class="bi bi-speedometer2 me-2"></i>Back-office</a></li>
                        <li><hr class="dropdown-divider"></li>
                        {% endif %}
                        <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-2"></i>D√©connexion</a></li>
                    </ul>
                </li>
                {% else %}
                <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link {{ app.request.get('_route') == 'app_login' ? 'active' : '' }}"><i class="bi bi-box-arrow-in-right me-1"></i>Connexion</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
</header>

<main class="main">
    {% block body %}
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container text-center">
                <h1>Inscription</h1>
                <p class="mb-4 text-muted fs-5">Rejoignez notre plateforme et acc√©dez √† une multitude de formations et d'√©v√©nements.</p>
            </div>
        </div>
    </div>

    <section class="section registration">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card p-4 shadow-lg">
                        {% if form is defined %}
                            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            {{ form_row(form.cin, {'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.age, {'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.dateNai, {'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.adresse, {'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.lieu, {'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.numtlfn, {'attr': {'class': 'form-control'}}) }}
                            {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
                            </div>
                            {{ form_end(form) }}
                        {% else %}
                            <p class="text-danger text-center">Erreur : Le formulaire n'est pas d√©fini.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endblock %}
</main>

<footer id="footer" class="footer">
    <div class="container text-center">
        <p>&copy; 2025 EduConnect. Tous droits r√©serv√©s.</p>
    </div>
</footer>

<!-- Vendor JS (fichiers dans public/assets) -->
<script src="/assets/js/bootstrap.bundle.min.js"></script>
<script src="/assets/js/main.js"></script>
</body>
</html>
