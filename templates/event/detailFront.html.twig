{% extends 'event/indexFront.twig' %}

{% block title %}{{ event.titre }} - Détails{% endblock %}

{% block body %}
    <div class="page-title">
        <div class="heading">
            <div class="container text-center">
                <h1>{{ event.titre }}</h1>
                <p class="mb-0 text-white opacity-90">Détails de l'événement</p>
            </div>
        </div>
    </div>

    <div class="container py-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('info') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}

        <div class="card shadow border-0 rounded mb-4">
            <div class="card-body">
                <table class="table table-bordered table-striped mb-0">
                    <tbody>
                    <tr>
                        <th class="text-nowrap">Date Début</th>
                        <td>{{ event.dateDebut ? event.dateDebut|date('d/m/Y H:i') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th class="text-nowrap">Date Fin</th>
                        <td>{{ event.dateFin ? event.dateFin|date('d/m/Y H:i') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th class="text-nowrap">Lieu</th>
                        <td>{{ event.lieu }}</td>
                    </tr>
                    <tr>
                        <th class="text-nowrap">Description</th>
                        <td>{{ event.description }}</td>
                    </tr>
                    <tr>
                        <th class="text-nowrap">Durée</th>
                        <td>{{ event.duree }} h</td>
                    </tr>
                    <tr>
                        <th class="text-nowrap">Places max</th>
                        <td>{{ event.nombreMaxParticipants }}</td>
                    </tr>
                    <tr>
                        <th class="text-nowrap">Image</th>
                        <td>
                            {% if event.image %}
                                <img src="{{ asset('uploads/events/' ~ event.image) }}" alt="{{ event.titre }}" class="img-thumbnail" width="150">
                            {% else %}
                                <span class="text-secondary">Aucune image</span>
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mt-4">
                    <a href="{{ path('app_event_index_front') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Retour à la liste des événements
                    </a>
                    {% if app.user %}
                        {% if hasJoined %}
                            <span class="badge bg-success fs-6 py-2 px-3"><i class="bi bi-check-circle me-1"></i>Vous participez à cet événement</span>
                        {% else %}
                            <form method="post" action="{{ path('app_event_join', { id: event.id }) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('join-event-' ~ event.id) }}">
                                <button type="submit" class="btn btn-primary"><i class="bi bi-person-plus me-2"></i>Rejoindre cet événement</button>
                            </form>
                        {% endif %}
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Connectez-vous pour rejoindre l'événement</a>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Bloc Avis / Review #}
        <div class="card shadow border-0 rounded mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-star me-2"></i>Avis des participants</h5>
            </div>
            <div class="card-body">
                {% if form %}
                    <h6 class="mb-3">Donnez votre avis</h6>
                    {{ form_start(form, {'attr': {'class': 'mb-4'}}) }}
                    <div class="row g-3">
                        <div class="col-md-4">
                            {{ form_row(form.note, {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.commentaire, {'label_attr': {'class': 'form-label'}}) }}
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Publier mon avis</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <hr>
                {% elseif userHasRated %}
                    <p class="text-success mb-0"><i class="bi bi-check-circle me-2"></i>Vous avez déjà donné votre avis pour cet événement.</p>
                    <hr>
                {% else %}
                    <p class="text-muted mb-0"><a href="{{ path('app_login') }}">Connectez-vous</a> pour laisser un avis.</p>
                    <hr>
                {% endif %}

                {% if ratings|length > 0 %}
                    <h6 class="mb-3">{{ ratings|length }} avis</h6>
                    <div class="list-group list-group-flush">
                        {% for rating in ratings %}
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <span class="fw-semibold">{{ rating.user.email }}</span>
                                        <span class="text-warning ms-2" title="{{ rating.note }}/5">
                                            {% for i in 1..5 %}<i class="bi bi-star{{ i <= rating.note ? '-fill' : '' }}"></i>{% endfor %}
                                        </span>
                                    </div>
                                    <small class="text-muted">{{ rating.dateCreation|date('d/m/Y') }}</small>
                                </div>
                                {% if rating.commentaire %}
                                    <p class="mb-0 mt-1 text-secondary">{{ rating.commentaire }}</p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted mb-0">Aucun avis pour le moment. Soyez le premier à donner votre avis !</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
