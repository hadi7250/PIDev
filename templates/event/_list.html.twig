<div class="table-responsive p-0">
    <table class="table align-items-center mb-0">
        <thead>
        <tr>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Titre</th>
            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Date Début</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date Fin</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Lieu</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">NbMax Participants</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Category</th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Image</th>
            <th class="text-secondary opacity-7">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold">{{ event.titre }}</span>
                </td>
                <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold">{{ event.dateDebut ? event.dateDebut|date('Y-m-d H:i:s') : 'N/A' }}</span>
                </td>
                <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold">{{ event.dateFin ? event.dateFin|date('Y-m-d H:i:s') : 'N/A' }}</span>
                </td>
                <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold">{{ event.lieu }}</span>
                </td>
                <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold">{{ event.nombreMaxParticipants }}</span>
                </td>
                <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold">
                        {{ event.category ? event.category.name : 'No category' }}
                    </span>
                </td>
                <td class="align-middle text-center">
                    {% if event.image %}
                        <img src="{{ asset('uploads/events/' ~ event.image) }}" alt="Image de l'événement" class="img-thumbnail" width="100">
                    {% else %}
                        <span class="text-secondary text-xs">Pas d'image</span>
                    {% endif %}
                </td>
                <td class="align-middle text-center">
                    <div class="d-flex justify-content-center gap-2">
                        <a class="btn btn-info btn-sm text-white" href="{{ path('app_event_show', {'id': event.id}) }}">Show</a>
                        <a class="btn btn-warning btn-sm text-dark" href="{{ path('app_event_edit', {'id': event.id}) }}">Edit</a>
                        <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this event?');" style="display:inline-block">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
