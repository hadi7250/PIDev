{% extends 'base.html.twig' %}

{% block title %}Competences{% endblock %}
{% block page_title %}Competence Management{% endblock %}

{% block body %}
<div class="card shadow-lg">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">
            <i class="fas fa-list-check"></i> Competences List
        </h3>
        <div class="d-flex gap-2">
            <a href="{{ path('competence_new') }}" class="btn btn-success btn-sm">
                <i class="fas fa-plus"></i> New Competence
            </a>
            <a href="{{ path('competence_export') }}" class="btn btn-info btn-sm">
                <i class="fas fa-file-export"></i> Export CSV
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-4">
            <form method="get" action="{{ path('competence_index') }}" class="row g-3">
                <div class="col-md-5">
                    <label for="keyword" class="form-label"><i class="fas fa-search"></i> Search</label>
                    <input type="text" name="keyword" id="keyword" class="form-control" 
                           placeholder="Search by name..." 
                           value="{{ app.request.query.get('keyword', '') }}">
                </div>
                <div class="col-md-4">
                    <label for="category" class="form-label"><i class="fas fa-filter"></i> Category</label>
                    <select name="category" id="category" class="form-select">
                        <option value="">All Categories</option>
                        <option value="technique" {% if app.request.query.get('category') == 'technique' %}selected{% endif %}>Technical</option>
                        <option value="comportementale" {% if app.request.query.get('category') == 'comportementale' %}selected{% endif %}>Behavioral</option>
                        <option value="langue" {% if app.request.query.get('category') == 'langue' %}selected{% endif %}>Language</option>
                        <option value="autre" {% if app.request.query.get('category') == 'autre' %}selected{% endif %}>Other</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" type="submit">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Max Level</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for competence in competences %}
                    <tr>
                        <td><strong>{{ competence.id }}</strong></td>
                        <td>{{ competence.name }}</td>
                        <td><span class="badge badge-info">{{ competence.category|capitalize }}</span></td>
                        <td>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar" style="width: {{ (competence.maxLevel/10)*100 }}%; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);">
                                    {{ competence.maxLevel }}/10
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="{{ path('competence_show', {'id': competence.id}) }}" class="btn btn-primary" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('competence_edit', {'id': competence.id}) }}" class="btn btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('competence_delete', {'id': competence.id}) }}" style="display:inline;" onsubmit="return confirm('Delete this competence?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competence.id) }}">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger" title="Delete"><i class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="fas fa-inbox"></i> No competences found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
