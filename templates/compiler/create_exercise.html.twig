{% extends 'base.html.twig' %}

{% block title %}Create Exercise - {{ evaluation.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-plus-circle"></i> Create Fill-in-the-Blanks Exercise
                    </h3>
                </div>

                <div class="card-body">
                    <p class="text-muted">
                        Create an exercise by providing template code with blanks marked as <code>[BLANK]</code> or <code>[BLANK:hint]</code>
                    </p>

                    <form method="POST">
                        <div class="form-group mb-3">
                            <label for="language" class="form-label">Programming Language</label>
                            <select id="language" name="language" class="form-select" required>
                                <option value="{{ evaluation.language }}" selected>{{ evaluation.language|upper }}</option>
                                {% for lang in supportedLanguages %}
                                    {% if lang != evaluation.language %}
                                        <option value="{{ lang }}">{{ lang|upper }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label for="description" class="form-label">Exercise Description</label>
                            <textarea id="description" name="description" class="form-control" rows="3" 
                                      placeholder="Describe what the user should do..."></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label for="templateCode" class="form-label">Template Code (with blanks)</label>
                            <textarea id="templateCode" name="templateCode" class="form-control" rows="10" 
                                      placeholder="Enter code template. Use [BLANK] or [BLANK:hint text] for blanks.&#10;&#10;Example:&#10;function greet(name) {&#10;  [BLANK:should return a greeting]&#10;}" 
                                      required></textarea>
                            <small class="form-text text-muted">
                                Mark blanks with <code>[BLANK]</code> or <code>[BLANK:hint text]</code>
                            </small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="solutionCode" class="form-label">Complete Solution Code</label>
                            <textarea id="solutionCode" name="solutionCode" class="form-control" rows="10" 
                                      placeholder="Enter the complete, correct solution..." required></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label for="hint" class="form-label">General Hint (Optional)</label>
                            <textarea id="hint" name="hint" class="form-control" rows="2" 
                                      placeholder="Provide a general hint for solving this exercise..."></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label for="difficulty" class="form-label">Difficulty Level</label>
                            <select id="difficulty" name="difficulty" class="form-select">
                                <option value="1">★ Easy</option>
                                <option value="2">★★ Medium</option>
                                <option value="3">★★★ Hard</option>
                                <option value="4">★★★★ Very Hard</option>
                                <option value="5">★★★★★ Expert</option>
                            </select>
                        </div>

                        <div class="alert alert-info">
                            <h6>Preview:</h6>
                            <pre id="preview" class="bg-light p-3 rounded"></pre>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Create Exercise
                            </button>
                            <a href="{{ path('compiler_evaluate', {'id': evaluation.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('templateCode').addEventListener('input', function() {
    const code = this.value;
    const preview = code.replace(/\[BLANK(?::.+?)?\]/g, '___________');
    document.getElementById('preview').textContent = preview || '[Preview will appear here]';
});
</script>
{% endblock %}
