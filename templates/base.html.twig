    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const bellBtn = document.querySelector('.notification-box-btn');
        const dropdown = document.getElementById('notif-dropdown');
        const list = document.getElementById('notif-list');
        const badge = document.getElementById('notif-count');
        let isOpen = false;

        // Toggle Dropdown
        if(bellBtn) {
            bellBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                isOpen = !isOpen;
                dropdown.style.display = isOpen ? 'block' : 'none';
                if (isOpen) fetchNotifications();
            });
        }

        // Close on click outside
        document.addEventListener('click', function() {
            if(isOpen) { isOpen = false; dropdown.style.display = 'none'; }
        });
        
        // Prevent closing when clicking inside the dropdown
        if(dropdown) {
            dropdown.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        }

        // Fetch from API
        function fetchNotifications() {
            // Using a relative path or the generated path if possible. 
            // Since this is inside a twig file, we can use the path() function
            fetch("{{ path('api_notifications') }}")
                .then(res => res.json())
                .then(data => {
                    list.innerHTML = '';
                    if (data.length > 0) {
                        badge.style.display = 'block';
                        badge.textContent = data.length;
                        data.forEach(n => {
                            list.innerHTML += `
                                <li style="border-bottom:1px solid #eee;">
                                    <a href="${n.link}" style="display:block; padding:10px; text-decoration:none; color:#333;">
                                        <strong>${n.message}</strong><br>
                                        <small style="color:#888;">${n.date}</small>
                                    </a>
                                </li>`;
                        });
                    } else {
                        badge.style.display = 'none';
                        list.innerHTML = '<li style="padding:10px; text-align:center; color: #666;">No new notifications</li>';
                    }
                })
                .catch(error => console.error('Error:', error));
        }
        
        // Check on load
        fetchNotifications();
    });
    </script>
