{% extends 'base.html.twig' %}

{% block title %}Mon Profil - {{ app.user.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- Header -->
                <div class="profile-header bg-gradient text-white text-center py-5">
                    <img src="{{ app.user.avatar | default('https://via.placeholder.com/150') }}" alt="Avatar" class="rounded-circle profile-avatar mb-3" style="width:150px; height:150px; object-fit:cover; border:5px solid white;">
                    <h2>{{ app.user.name }}</h2>
                    <p class="lead">{{ app.user.roles | first | replace({'ROLE_': ''}) | capitalize }}</p>
                    <p class="text-white-75">{{ app.user.email }}</p>
                </div>

                <!-- Flash message -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <!-- Formulaire -->
                <div class="card-body p-5">
                    <h3 class="mb-4 text-center">Modifier mes informations</h3>
                    
                    {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                        <div class="col-md-6">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                        
                        <div class="col-md-6">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        
                        <div class="col-md-12">
                            {{ form_label(form.nsc, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nsc, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nsc) }}
                        </div>
                        
                        <div class="col-md-6">
                            {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                        
                        <div class="col-md-6">
                            {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                        
                        <div class="col-12 text-center mt-4">
                            <a href="{{ path('app_homepage') }}" class="btn btn-outline-secondary btn-lg px-4 me-3">
                                <i class="fas fa-arrow-left me-2"></i> Retour Ã  la page principale
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save me-2"></i> Sauvegarder
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
