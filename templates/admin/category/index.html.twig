{% extends 'base_admin_original.html.twig' %}

{% block title %}Categories - Admin{% endblock %}
{% block breadcrumb %}Categories{% endblock %}
{% block breadcrumb_active %}Categories{% endblock %}

{% block body %}
<div class="page-header">
    <div class="content-page-header">
        <h5>Categories</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">Add New Category</h5>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.color) }}
                    {{ form_widget(form.color) }}
                    {{ form_errors(form.color) }}
                    <small class="form-text text-muted">Enter hex color code (e.g., #FF5733)</small>
                </div>
                <button type="submit" class="btn btn-primary">Create Category</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">All Categories</h5>
                </div>
            </div>
            <div class="card-body">
                {% if categories %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Color</th>
                                <th>Discussions</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                            <tr>
                                <td>
                                    <strong>{{ category.name }}</strong>
                                </td>
                                <td>{{ category.description|default('-') }}</td>
                                <td>
                                    {% if category.color %}
                                    <span class="badge" style="background-color: {{ category.color }}">
                                        {{ category.color }}
                                    </span>
                                    {% else %}
                                    -
                                    {% endif %}
                                </td>
                                <td>{{ category.discussions|length }}</td>
                                <td>{{ category.createdAt|date('M d, Y') }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('app_forum_category_show', {'id': category.id}) }}" target="_blank" 
                                           class="btn btn-sm btn-outline-info" title="View">
                                            <i class="material-icons-outlined">visibility</i>
                                        </a>
                                        <a href="{{ path('admin_forum_category_edit', {'id': category.id}) }}" 
                                           class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="material-icons-outlined">edit</i>
                                        </a>
                                        <form method="post" action="{{ path('admin_forum_category_delete', {'id': category.id}) }}" 
                                              style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="material-icons-outlined">delete</i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-4">
                    <i class="material-icons-outlined fs-1 text-muted">category</i>
                    <p class="text-muted">No categories found</p>
                    <p class="text-muted">Create your first category using the form on the left.</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
