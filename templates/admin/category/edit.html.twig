{% extends 'base_admin.html.twig' %}

{% block title %}Edit Category - Admin{% endblock %}

{% block body %}
<div class="page-header">
    <div class="content-page-header">
        <h5>Edit Category</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">Edit Category: {{ category.name }}</h5>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.color) }}
                    {{ form_widget(form.color) }}
                    {{ form_errors(form.color) }}
                    <small class="form-text text-muted">Enter hex color code (e.g., #FF5733)</small>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Update Category</button>
                    <a href="{{ path('admin_forum_categories') }}" class="btn btn-outline-secondary">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">Category Information</h5>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <td><strong>Name:</strong></td>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <td><strong>Description:</strong></td>
                        <td>{{ category.description|default('No description') }}</td>
                    </tr>
                    <tr>
                        <td><strong>Color:</strong></td>
                        <td>
                            {% if category.color %}
                            <span class="badge" style="background-color: {{ category.color }}">
                                {{ category.color }}
                            </span>
                            {% else %}
                            No color set
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Discussions:</strong></td>
                        <td>{{ category.discussions|length }}</td>
                    </tr>
                    <tr>
                        <td><strong>Created:</strong></td>
                        <td>{{ category.createdAt|date('M d, Y H:i') }}</td>
                    </tr>
                    {% if category.updatedAt %}
                    <tr>
                        <td><strong>Last Updated:</strong></td>
                        <td>{{ category.updatedAt|date('M d, Y H:i') }}</td>
                    </tr>
                    {% endif %}
                </table>
                
                <div class="mt-3">
                    <h6>Quick Actions</h6>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_forum_category_show', {'id': category.id}) }}" target="_blank" 
                           class="btn btn-outline-info btn-sm">
                            <i class="material-icons-outlined me-2">visibility</i>View Category
                        </a>
                        <a href="{{ path('admin_forum_categories') }}" 
                           class="btn btn-outline-secondary btn-sm">
                            <i class="material-icons-outlined me-2">list</i>Back to Categories
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
