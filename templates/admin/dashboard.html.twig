{% extends 'base_admin_original.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}
{% block breadcrumb %}Dashboard{% endblock %}
{% block breadcrumb_active %}Dashboard{% endblock %}

{% block body %}
<div class="page-header">
    <div class="content-page-header">
        <h5>Dashboard</h5>
    </div>
</div>

<div class="row">
    <!-- Stats Cards -->
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h5 class="mb-0">{{ total_discussions }}</h5>
                        <p class="mb-0 text-muted">Total Discussions</p>
                    </div>
                    <div class="avatar-sm bg-primary bg-opacity-10 rounded">
                        <i class="material-icons-outlined fs-6 text-primary">forum</i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h5 class="mb-0">{{ total_messages }}</h5>
                        <p class="mb-0 text-muted">Total Messages</p>
                    </div>
                    <div class="avatar-sm bg-success bg-opacity-10 rounded">
                        <i class="material-icons-outlined fs-6 text-success">chat</i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h5 class="mb-0">{{ total_categories }}</h5>
                        <p class="mb-0 text-muted">Categories</p>
                    </div>
                    <div class="avatar-sm bg-warning bg-opacity-10 rounded">
                        <i class="material-icons-outlined fs-6 text-warning">category</i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h5 class="mb-0">{{ latest_discussions|length }}</h5>
                        <p class="mb-0 text-muted">New Discussions</p>
                    </div>
                    <div class="avatar-sm bg-info bg-opacity-10 rounded">
                        <i class="material-icons-outlined fs-6 text-info">trending_up</i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Latest Discussions -->
    <div class="col-xl-8 col-lg-7">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h5 class="mb-0">Latest Discussions</h5>
                </div>
                <div class="card-action">
                    <a href="{{ path('admin_forum_discussions') }}" class="btn btn-sm btn-primary">View All</a>
                </div>
            </div>
            <div class="card-body">
                {% if latest_discussions %}
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for discussion in latest_discussions %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_forum_discussion_show', {'id': discussion.id}) }}" target="_blank">
                                        {{ discussion.title }}
                                    </a>
                                    {% if discussion.isPinned %}
                                    <span class="badge bg-warning">Pinned</span>
                                    {% endif %}
                                    {% if discussion.isLocked %}
                                    <span class="badge bg-danger">Locked</span>
                                    {% endif %}
                                </td>
                                <td>{{ discussion.authorName }}</td>
                                <td>{{ discussion.createdAt|date('M d, Y') }}</td>
                                <td>
                                    <a href="{{ path('admin_forum_discussion_edit', {'id': discussion.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="material-icons-outlined">edit</i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-4">
                    <i class="material-icons-outlined fs-1 text-muted">forum</i>
                    <p class="text-muted">No discussions yet</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Latest Messages -->
    <div class="col-xl-4 col-lg-5">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h5 class="mb-0">Latest Messages</h5>
                </div>
                <div class="card-action">
                    <a href="{{ path('admin_forum_messages') }}" class="btn btn-sm btn-primary">View All</a>
                </div>
            </div>
            <div class="card-body">
                {% if latest_messages %}
                <div class="timeline">
                    {% for message in latest_messages %}
                    <div class="timeline-item">
                        <div class="timeline-point">
                            <i class="material-icons-outlined">chat</i>
                        </div>
                        <div class="timeline-content">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">{{ message.authorName }}</h6>
                                <small class="text-muted">{{ message.createdAt|date('M d') }}</small>
                            </div>
                            <p class="mb-1 text-truncate">{{ message.content }}</p>
                            <small class="text-muted">
                                In: <a href="{{ path('app_forum_discussion_show', {'id': message.discussion.id}) }}" target="_blank">
                                    {{ message.discussion.title }}
                                </a>
                            </small>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-4">
                    <i class="material-icons-outlined fs-1 text-muted">chat</i>
                    <p class="text-muted">No messages yet</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="{{ path('admin_forum_categories') }}" class="btn btn-outline-primary w-100 mb-2">
                            <i class="material-icons-outlined me-2">category</i>Manage Categories
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('admin_forum_discussions') }}" class="btn btn-outline-success w-100 mb-2">
                            <i class="material-icons-outlined me-2">forum</i>Manage Discussions
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('admin_forum_messages') }}" class="btn btn-outline-info w-100 mb-2">
                            <i class="material-icons-outlined me-2">chat</i>Manage Messages
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('app_forum_index') }}" class="btn btn-outline-secondary w-100 mb-2">
                            <i class="material-icons-outlined me-2">visibility</i>View Forum
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
