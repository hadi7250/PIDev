{% extends 'base_admin_original.html.twig' %}

{% block title %}Discussions - Admin{% endblock %}
{% block breadcrumb %}Discussions{% endblock %}
{% block breadcrumb_active %}Discussions{% endblock %}

{% block body %}
<div class="page-header">
    <div class="content-page-header">
        <h5>Discussions</h5>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="header-title">
            <h5 class="mb-0">All Discussions</h5>
        </div>
        <div class="card-action">
            <a href="{{ path('app_forum_discussions') }}" target="_blank" class="btn btn-sm btn-success">
                <i class="material-icons-outlined me-2">add</i>Add New Discussion
            </a>
        </div>
    </div>
    <div class="card-body">
        {% if discussions %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Messages</th>
                        <th>Views</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for discussion in discussions %}
                    <tr>
                        <td>
                            <a href="{{ path('app_forum_discussion_show', {'id': discussion.id}) }}" target="_blank">
                                {{ discussion.title }}
                            </a>
                            {% if discussion.isPinned %}
                            <span class="badge bg-warning">Pinned</span>
                            {% endif %}
                            {% if discussion.isLocked %}
                            <span class="badge bg-danger">Locked</span>
                            {% endif %}
                        </td>
                        <td>{{ discussion.authorName }}</td>
                        <td>
                            {% if discussion.category %}
                            <a href="{{ path('app_forum_category_show', {'id': discussion.category.id}) }}" target="_blank">
                                {{ discussion.category.name }}
                            </a>
                            {% else %}
                            -
                            {% endif %}
                        </td>
                        <td>{{ discussion.messageCount }}</td>
                        <td>{{ discussion.views }}</td>
                        <td>
                            {% if discussion.isPinned %}
                            <span class="badge bg-warning">Pinned</span>
                            {% endif %}
                            {% if discussion.isLocked %}
                            <span class="badge bg-danger">Locked</span>
                            {% endif %}
                            {% if not discussion.isPinned and not discussion.isLocked %}
                            <span class="badge bg-success">Active</span>
                            {% endif %}
                        </td>
                        <td>{{ discussion.createdAt|date('M d, Y') }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_forum_discussion_show', {'id': discussion.id}) }}" target="_blank" 
                                   class="btn btn-sm btn-outline-info" title="View">
                                    <i class="material-icons-outlined">visibility</i>
                                </a>
                                <a href="{{ path('admin_forum_discussion_edit', {'id': discussion.id}) }}" 
                                   class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="material-icons-outlined">edit</i>
                                </a>
                                <form method="post" action="{{ path('admin_forum_discussion_delete', {'id': discussion.id}) }}" 
                                      style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this discussion and all its messages?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discussion.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="material-icons-outlined">delete</i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-4">
            <i class="material-icons-outlined fs-1 text-muted">forum</i>
            <p class="text-muted">No discussions found</p>
            <a href="{{ path('app_forum_discussions') }}" target="_blank" class="btn btn-primary">
                Create First Discussion
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
