{% extends 'base_admin_original.html.twig' %}

{% block title %}Edit Discussion - Admin{% endblock %}
{% block breadcrumb %}Discussions{% endblock %}
{% block breadcrumb_active %}Edit Discussion{% endblock %}

{% block body %}
<div class="page-header">
    <div class="content-page-header">
        <h5>Edit Discussion</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">Edit Discussion: {{ discussion.title }}</h5>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.authorName) }}
                            {{ form_widget(form.authorName) }}
                            {{ form_errors(form.authorName) }}
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    {{ form_errors(form.category) }}
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check mb-3">
                            {{ form_widget(form.isPinned) }}
                            {{ form_label(form.isPinned) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mb-3">
                            {{ form_widget(form.isLocked) }}
                            {{ form_label(form.isLocked) }}
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Update Discussion</button>
                    <a href="{{ path('admin_forum_discussions') }}" class="btn btn-outline-secondary">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">Discussion Information</h5>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>{{ discussion.id }}</td>
                    </tr>
                    <tr>
                        <td><strong>Author:</strong></td>
                        <td>{{ discussion.authorName }}</td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td>{{ discussion.authorEmail|default('Not provided') }}</td>
                    </tr>
                    <tr>
                        <td><strong>Category:</strong></td>
                        <td>
                            {% if discussion.category %}
                            <a href="{{ path('app_forum_category_show', {'id': discussion.category.id}) }}" target="_blank">
                                {{ discussion.category.name }}
                            </a>
                            {% else %}
                            No category
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Messages:</strong></td>
                        <td>{{ discussion.messageCount }}</td>
                    </tr>
                    <tr>
                        <td><strong>Views:</strong></td>
                        <td>{{ discussion.views }}</td>
                    </tr>
                    <tr>
                        <td><strong>Created:</strong></td>
                        <td>{{ discussion.createdAt|date('M d, Y H:i') }}</td>
                    </tr>
                    {% if discussion.updatedAt %}
                    <tr>
                        <td><strong>Last Updated:</strong></td>
                        <td>{{ discussion.updatedAt|date('M d, Y H:i') }}</td>
                    </tr>
                    {% endif %}
                </table>
                
                <div class="mt-3">
                    <h6>Quick Actions</h6>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_forum_discussion_show', {'id': discussion.id}) }}" target="_blank" 
                           class="btn btn-outline-info btn-sm">
                            <i class="material-icons-outlined me-2">visibility</i>View Discussion
                        </a>
                        <a href="{{ path('admin_forum_discussions') }}" 
                           class="btn btn-outline-secondary btn-sm">
                            <i class="material-icons-outlined me-2">list</i>Back to Discussions
                        </a>
                        {% if discussion.messageCount > 0 %}
                        <a href="{{ path('admin_forum_messages') }}" 
                           class="btn btn-outline-primary btn-sm">
                            <i class="material-icons-outlined me-2">chat</i>View Messages
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
