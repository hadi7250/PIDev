{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Courses{% endblock %}

{% block body %}
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Tables</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_admin_cours_index') }}"><i class="material-icons-outlined">home</i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Courses Data Table</li>
                </ol>
            </nav>
        </div>
        <div class="ms-auto">
            <div class="btn-group">
                <a href="{{ path('app_admin_cours_new') }}" class="btn btn-primary">Add New Course</a>
            </div>
        </div>
    </div>

    <h6 class="mb-0 text-uppercase">Courses List</h6>
    <hr>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="example2" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for course in courses %}
                            <tr>
                                <td>{{ course.id }}</td>
                                <td>{{ course.titre }}</td>
                                <td>{{ course.description|slice(0, 50) }}...</td>
                                <td>{{ course.createdAt ? course.createdAt|date('Y-m-d H:i') : '' }}</td>
                                <td>
                                    <div class="d-flex order-actions">
                                        <a href="{{ path('app_admin_cours_edit', {'id': course.id}) }}" class="btn btn-sm btn-warning me-2">
                                            <i class="material-icons-outlined">edit</i> Edit
                                        </a>
                                        
                                        <form method="post" action="{{ path('app_admin_cours_delete', {'id': course.id}) }}" onsubmit="return confirm('Are you sure you want to delete this course?');" style="display:inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
                                            <button class="btn btn-sm btn-danger">
                                                <i class="material-icons-outlined">delete</i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">No courses found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            var table = $('#example2').DataTable( {
                lengthChange: false,
                buttons: [ 'copy', 'excel', 'pdf', 'print']
            } );
         
            table.buttons().container()
                .appendTo( '#example2_wrapper .col-md-6:eq(0)' );
        } );
    </script>
{% endblock %}