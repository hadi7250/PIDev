{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Chapters{% endblock %}

{% block body %}
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Tables</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_admin_cours_index') }}"><i class="material-icons-outlined">home</i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chapters List</li>
                </ol>
            </nav>
        </div>
        <div class="ms-auto">
            <a href="{{ path('app_admin_chapitre_new') }}" class="btn btn-primary">Add New Chapter</a>
        </div>
    </div>

    <h6 class="mb-0 text-uppercase">Chapters List</h6>
    <hr>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="example2" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Belongs To Course</th>
                            <th>Content Preview</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for chapitre in chapitres %}
                            <tr>
                                <td>{{ chapitre.id }}</td>
                                <td>{{ chapitre.titre }}</td>
                                <td><span class="badge bg-info text-dark">{{ chapitre.cours.titre }}</span></td>
                                <td>{{ chapitre.contenu|slice(0, 50) }}...</td>
                                <td>
                                    <div class="d-flex order-actions">
                                        <a href="{{ path('app_admin_chapitre_edit', {'id': chapitre.id}) }}" class="btn btn-sm btn-warning me-2"><i class="material-icons-outlined">edit</i></a>
                                        <form method="post" action="{{ path('app_admin_chapitre_delete', {'id': chapitre.id}) }}" onsubmit="return confirm('Delete this chapter?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapitre.id) }}">
                                            <button class="btn btn-sm btn-danger"><i class="material-icons-outlined">delete</i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="5" class="text-center">No chapters found</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function() {
        var table = $('#example2').DataTable( { lengthChange: false, buttons: [ 'copy', 'excel', 'pdf', 'print'] } );
        table.buttons().container().appendTo( '#example2_wrapper .col-md-6:eq(0)' );
    });
</script>
{% endblock %}