{% extends 'base_admin.html.twig' %}

{% block title %}Messages - Admin{% endblock %}

{% block body %}
<div class="page-header">
    <div class="content-page-header">
        <h5>Messages</h5>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="header-title">
            <h5 class="mb-0">All Messages</h5>
        </div>
    </div>
    <div class="card-body">
        {% if messages %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Content</th>
                        <th>Author</th>
                        <th>Discussion</th>
                        <th>Is Author</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for message in messages %}
                    <tr>
                        <td>
                            <div class="text-truncate" style="max-width: 300px;" title="{{ message.content }}">
                                {{ message.content|slice(0, 100) }}{% if message.content|length > 100 %}...{% endif %}
                            </div>
                        </td>
                        <td>
                            {{ message.authorName }}
                            {% if message.authorEmail %}
                            <br><small class="text-muted">{{ message.authorEmail }}</small>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_forum_discussion_show', {'id': message.discussion.id}) }}" target="_blank">
                                {{ message.discussion.title }}
                            </a>
                        </td>
                        <td>
                            {% if message.isAuthor %}
                            <span class="badge bg-primary">Yes</span>
                            {% else %}
                            <span class="badge bg-secondary">No</span>
                            {% endif %}
                        </td>
                        <td>{{ message.createdAt|date('M d, Y H:i') }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_forum_discussion_show', {'id': message.discussion.id}) }}#message-{{ message.id }}" 
                                   target="_blank" class="btn btn-sm btn-outline-info" title="View in Discussion">
                                    <i class="material-icons-outlined">visibility</i>
                                </a>
                                <a href="{{ path('admin_forum_message_edit', {'id': message.id}) }}" 
                                   class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="material-icons-outlined">edit</i>
                                </a>
                                <form method="post" action="{{ path('admin_forum_message_delete', {'id': message.id}) }}" 
                                      style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this message?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="material-icons-outlined">delete</i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-4">
            <i class="material-icons-outlined fs-1 text-muted">chat</i>
            <p class="text-muted">No messages found</p>
            <a href="{{ path('app_forum_discussions') }}" target="_blank" class="btn btn-primary">
                View Discussions to Add Messages
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
