{% extends 'base_admin_original.html.twig' %}

{% block title %}Edit Message - Admin{% endblock %}
{% block breadcrumb %}Messages{% endblock %}
{% block breadcrumb_active %}Edit Message{% endblock %}

{% block body %}
<div class="page-header">
    <div class="content-page-header">
        <h5>Edit Message</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">Edit Message</h5>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.authorName) }}
                            {{ form_widget(form.authorName) }}
                            {{ form_errors(form.authorName) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.authorEmail) }}
                            {{ form_widget(form.authorEmail) }}
                            {{ form_errors(form.authorEmail) }}
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        {{ form_widget(form.isAuthor) }}
                        {{ form_label(form.isAuthor) }}
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Update Message</button>
                    <a href="{{ path('admin_forum_messages') }}" class="btn btn-outline-secondary">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <div class="header-title">
                    <h5 class="mb-0">Message Information</h5>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>{{ message.id }}</td>
                    </tr>
                    <tr>
                        <td><strong>Author:</strong></td>
                        <td>{{ message.authorName }}</td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td>{{ message.authorEmail|default('Not provided') }}</td>
                    </tr>
                    <tr>
                        <td><strong>Is Author:</strong></td>
                        <td>
                            {% if message.isAuthor %}
                            <span class="badge bg-primary">Yes</span>
                            {% else %}
                            <span class="badge bg-secondary">No</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Discussion:</strong></td>
                        <td>
                            <a href="{{ path('app_forum_discussion_show', {'id': message.discussion.id}) }}" target="_blank">
                                {{ message.discussion.title }}
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Created:</strong></td>
                        <td>{{ message.createdAt|date('M d, Y H:i') }}</td>
                    </tr>
                    {% if message.updatedAt %}
                    <tr>
                        <td><strong>Last Updated:</strong></td>
                        <td>{{ message.updatedAt|date('M d, Y H:i') }}</td>
                    </tr>
                    {% endif %}
                </table>
                
                <div class="mt-3">
                    <h6>Quick Actions</h6>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_forum_discussion_show', {'id': message.discussion.id}) }}#message-{{ message.id }}" 
                           target="_blank" class="btn btn-outline-info btn-sm">
                            <i class="material-icons-outlined me-2">visibility</i>View in Discussion
                        </a>
                        <a href="{{ path('admin_forum_messages') }}" 
                           class="btn btn-outline-secondary btn-sm">
                            <i class="material-icons-outlined me-2">list</i>Back to Messages
                        </a>
                        <a href="{{ path('admin_forum_discussion_edit', {'id': message.discussion.id}) }}" 
                           class="btn btn-outline-primary btn-sm">
                            <i class="material-icons-outlined me-2">forum</i>Edit Discussion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
