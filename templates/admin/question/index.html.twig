{% extends 'admin/base_admin.html.twig' %}

{% block title %}Manage Questions{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Quiz Management</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="{{ path('app_admin_quiz_datatable') }}"><i class="material-icons-outlined">home</i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Manage Questions</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header bg-transparent border-bottom px-4 py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Questions for: {{ quiz.title }}</h5>
                <span class="badge bg-primary">{{ quiz.questions|length }} Questions</span>
            </div>
            <div class="card-body p-4 overflow-auto" style="max-height: 600px;">
                {% for q in quiz.questions %}
                    <div class="card border mb-3 shadow-none">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="fw-bold mb-2">{{ q.questionText }}</h6>
                                <span class="badge bg-info text-dark">{{ q.points }} pts</span>
                            </div>
                            
                            <div class="mb-2">
                                <small class="text-secondary fw-bold">Correct Answer:</small>
                                <span class="text-success fw-bold ms-1">{{ q.correctAnswer }}</span>
                            </div>

                            <ul class="list-group list-group-flush mb-3">
                                {% for opt in q.options %}
                                    <li class="list-group-item bg-transparent py-1 px-0 {{ opt == q.correctAnswer ? 'text-success fw-bold' : '' }}">
                                        - {{ opt }}
                                    </li>
                                {% endfor %}
                            </ul>

                            <div class="text-end">
                                <form method="post" action="{{ path('app_admin_question_delete', {'id': q.id}) }}" onsubmit="return confirm('Delete this question?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ q.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="material-icons-outlined fs-1 text-secondary">quiz</i>
                        <p class="text-secondary mt-2">No questions added yet.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header bg-transparent border-bottom px-4 py-3">
                <h5 class="mb-0">Add New Question</h5>
            </div>
            <div class="card-body p-4">
                {{ form_start(form) }}
                    
                    <div class="mb-3">
                        <label class="form-label">Question Text</label>
                        {{ form_widget(form.questionText, {'attr': {'class': 'form-control', 'placeholder': 'Enter the question...'}}) }}
                        <div class="text-danger small">{{ form_errors(form.questionText) }}</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label d-flex justify-content-between align-items-center">
                            Options (Answers)
                            <button type="button" class="btn btn-sm btn-outline-light add-option">
                                + Add Option
                            </button>
                        </label>
                        
                        {# THIS IS THE WRAPPER FOR DYNAMIC OPTIONS #}
                        <div class="options-wrapper" 
                             data-index="{{ form.options|length > 0 ? (form.options|last.vars.name + 1) : 0 }}"
                             data-prototype="{{ form_widget(form.options.vars.prototype)|e('html_attr') }}">
                            
                            {% for optionField in form.options %}
                                <div class="input-group mb-2">
                                    {{ form_widget(optionField, {'attr': {'class': 'form-control'}}) }}
                                    <button type="button" class="btn btn-outline-danger remove-option">X</button>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="text-danger small">{{ form_errors(form.options) }}</div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-8">
                            <label class="form-label">Correct Answer (Exact Text)</label>
                            {{ form_widget(form.correctAnswer, {'attr': {'class': 'form-control', 'placeholder': 'Must match one option exactly'}}) }}
                            <div class="text-danger small">{{ form_errors(form.correctAnswer) }}</div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Points</label>
                            {{ form_widget(form.points, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Save Question</button>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const wrapper = document.querySelector('.options-wrapper');
        const addButton = document.querySelector('.add-option');

        // Logic to ADD a new option input
        addButton.addEventListener('click', function() {
            let prototype = wrapper.dataset.prototype;
            let index = parseInt(wrapper.dataset.index);
            
            // Replace __name__ with the current index
            let newForm = prototype.replace(/__name__/g, index);
            
            // Create the DOM element
            let div = document.createElement('div');
            div.classList.add('input-group', 'mb-2');
            div.innerHTML = newForm + '<button type="button" class="btn btn-outline-danger remove-option">X</button>';
            
            wrapper.appendChild(div);
            
            // Increment index
            wrapper.dataset.index = index + 1;
        });

        // Logic to REMOVE an option input
        wrapper.addEventListener('click', function(e) {
            if (e.target && e.target.classList.contains('remove-option')) {
                e.target.closest('.input-group').remove();
            }
        });
    });
</script>
{% endblock %}