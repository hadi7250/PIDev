{% extends 'base.html.twig' %}

{% block title %}My Progress - EduConnect{% endblock %}

{% block content %}
<div class="container-fluid py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2 gradient-text mb-2">
                <i class="fas fa-chart-line me-2"></i>My Progress
            </h1>
            <p class="text-muted">Track your competence development across all evaluations</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-chart-bar fa-4x text-muted mb-3 opacity-50"></i>
                    <p class="text-muted">Progress charts and statistics will appear here</p>
                    <p class="small text-muted">Coming soon: Detailed competence progress tracking</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-text {
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
{% endblock %}
