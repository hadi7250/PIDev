{% extends 'base.html.twig' %}

{% block title %}Calendar - EduConnect{% endblock %}

{% block content %}
<div class="container-fluid py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2 gradient-text mb-2">
                <i class="fas fa-calendar me-2"></i>Evaluation Calendar
            </h1>
            <p class="text-muted">View your upcoming evaluations in calendar format</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-calendar-alt fa-4x text-muted mb-3 opacity-50"></i>
                    <p class="text-muted">Calendar view will appear here</p>
                    <p class="small text-muted">Coming soon: Interactive calendar with evaluation dates</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-text {
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
{% endblock %}
