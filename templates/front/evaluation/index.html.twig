{% extends 'base.html.twig' %}

{% block title %}Student Evaluations{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Student Evaluation Management</h1>
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Back to Admin</a>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Available Evaluations</h5>
                </div>
                <div class="card-body">
                    {% if evaluations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                        <th>Weight</th>
                                        <th>Competence</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for evaluation in evaluations %}
                                        <tr>
                                            <td>{{ evaluation.id }}</td>
                                            <td>{{ evaluation.title }}</td>
                                            <td>{{ evaluation.description|length > 50 ? evaluation.description[:50] ~ '...' : evaluation.description }}</td>
                                            <td>{{ evaluation.type }}</td>
                                            <td>{{ evaluation.evaluationDate ? evaluation.evaluationDate|date('Y-m-d') : '' }}</td>
                                            <td>{{ evaluation.weight }}</td>
                                            <td>{{ evaluation.competence ? evaluation.competence.name : 'N/A' }}</td>
                                            <td>
                                                <a href="{{ path('evaluation_show', {'id': evaluation.id}) }}" class="btn btn-sm btn-primary">View Details</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            No evaluations available yet.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('student_dashboard') }}" class="btn btn-outline-primary">Back to Student Dashboard</a>
    </div>
</div>
{% endblock %}