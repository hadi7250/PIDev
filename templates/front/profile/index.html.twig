{% extends 'base.html.twig' %}

{% block title %}My Profile - EduConnect{% endblock %}

{% block content %}
<div class="container-fluid py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2 gradient-text mb-2">
                <i class="fas fa-user-circle me-2"></i>My Profile
            </h1>
            <p class="text-muted">Manage your profile settings and preferences</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <h5 class="card-title mb-0">Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">First Name</label>
                            <p class="form-control-plaintext">{{ user.firstName }}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Last Name</label>
                            <p class="form-control-plaintext">{{ user.lastName }}</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Email</label>
                            <p class="form-control-plaintext">{{ user.email }}</p>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-sm">
                        <i class="fas fa-edit me-1"></i>Edit Profile
                    </button>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <h5 class="card-title mb-0">Account Settings</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2 pb-2 border-bottom">
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-lock me-2 text-primary"></i>Change Password
                            </a>
                        </li>
                        <li class="mb-2 pb-2 border-bottom">
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-bell me-2 text-primary"></i>Notification Settings
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-decoration-none">
                                <i class="fas fa-toggle-on me-2 text-primary"></i>Two-Factor Authentication
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-text {
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
{% endblock %}
