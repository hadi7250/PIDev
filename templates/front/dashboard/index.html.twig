{% extends 'base.html.twig' %}

{% block title %}Student Dashboard{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Student Dashboard</h1>
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Back to Admin</a>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Competences</h5>
                    <p class="card-text">View and manage your competences and skills.</p>
                    <a href="{{ path('student_competences') }}" class="btn btn-light">View Competences</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Evaluations</h5>
                    <p class="card-text">Check your evaluations and progress.</p>
                    <a href="{{ path('student_evaluations') }}" class="btn btn-light">View Evaluations</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Progress</h5>
                    <p class="card-text">Track your learning progress and achievements.</p>
                    <a href="{{ path('student_my_progress') }}" class="btn btn-light">View Progress</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="list-group">
                        <a href="{{ path('student_overview') }}" class="list-group-item list-group-item-action">Overview</a>
                        <a href="{{ path('student_my_evaluations') }}" class="list-group-item list-group-item-action">My Evaluations</a>
                        <a href="{{ path('student_calendar') }}" class="list-group-item list-group-item-action">Calendar</a>
                        <a href="{{ path('student_profile') }}" class="list-group-item list-group-item-action">Profile</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Activity</h5>
                    <p class="card-text">Stay updated with your recent learning activities and notifications.</p>
                    <div class="alert alert-info">
                        No recent activity to display.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}