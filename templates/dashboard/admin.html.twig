{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Administrateur{% endblock %}

{% block breadcrumb %}Administration{% endblock %}

{% block body %}
<div class="row">
    <div class="col-xxl-8 d-flex align-items-stretch">
        <div class="card w-100 overflow-hidden rounded-4">
            <div class="card-body position-relative p-4">
                <div class="row">
                    <div class="col-12 col-sm-7">
                        <div class="d-flex align-items-center gap-3 mb-5">
                            <img src="{{ asset('assets_back/images/avatars/01.png') }}" class="rounded-circle bg-grd-info p-1" width="60" height="60" alt="user">
                            <div class="">
                                <p class="mb-0 fw-semibold">Bienvenue Administrateur</p>
                                <h4 class="fw-semibold mb-0 fs-4 mb-0">{{ user.name }} !</h4>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-5">
                            <div class="">
                                <h4 class="mb-1 fw-semibold d-flex align-content-center">{{ stats.total_users|default(0) }}</h4>
                                <p class="mb-3">Utilisateurs totaux</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}