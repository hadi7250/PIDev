{% extends 'base.html.twig' %}

{% block title %}Competences Management - EduConnect{% endblock %}

{% block content %}
<div class="container-fluid py-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 gradient-text mb-2">
                        <i class="fas fa-star me-2"></i>Competences Management
                    </h1>
                    <p class="text-muted">Manage all competences in the system</p>
                </div>
                <a href="{{ path('competence_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>New Competence
                </a>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row mb-5">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie me-2"></i>
                        Competences by Category
                    </h5>
                </div>
                <div class="card-body d-flex justify-content-center align-items-center" style="min-height: 250px;">
                    {% if competences|length > 0 %}
                        <canvas id="categoryChart"></canvas>
                    {% else %}
                        <div class="alert alert-info text-center mb-0">No competence data available</div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-warning text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Max Level Distribution
                    </h5>
                </div>
                <div class="card-body d-flex justify-content-center align-items-center" style="min-height: 250px;">
                    {% if competences|length > 0 %}
                        <canvas id="levelChart"></canvas>
                    {% else %}
                        <div class="alert alert-info text-center mb-0">No level data available</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-sm" placeholder="Search competences...">
                        </div>
                        <div class="col-md-6 text-end">
                            <button class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-filter me-1"></i>Filter
                            </button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Max Level</th>
                                <th>Created</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for competence in competences %}
                                <tr>
                                    <td><strong>{{ competence.name }}</strong></td>
                                    <td><span class="badge bg-light text-dark">{{ competence.category }}</span></td>
                                    <td><span class="badge bg-info">{{ competence.maxLevel }}</span></td>
                                    <td><small class="text-muted">{{ competence.createdAt|date('M d, Y') }}</small></td>
                                    <td class="text-end">
                                        <a href="{{ path('competence_show', {'id': competence.id}) }}" class="btn btn-sm btn-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('competence_edit', {'id': competence.id}) }}" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">
                                        No competences found
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-text {
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .bg-gradient-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
    }
</style>

<!-- Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const competences = [
            {% for competence in competences %}
                {
                    name: '{{ competence.name }}',
                    category: '{{ competence.category ?? "Unknown" }}',
                    maxLevel: {{ competence.maxLevel ?? 5 }}
                }{{ not loop.last ? ',' : '' }}
            {% endfor %}
        ];

        if (competences.length > 0) {
            // Category Chart
            const categoryCount = {};
            competences.forEach(c => {
                categoryCount[c.category] = (categoryCount[c.category] || 0) + 1;
            });

            const categoryNames = Object.keys(categoryCount);
            const categoryCounts = Object.values(categoryCount);
            const colors = ['#6366f1', '#10b981', '#f59e0b', '#ef4444', '#a855f7', '#06b6d4'];

            const categoryCtx = document.getElementById('categoryChart');
            if (categoryCtx) {
                new Chart(categoryCtx, {
                    type: 'doughnut',
                    data: {
                        labels: categoryNames,
                        datasets: [{
                            data: categoryCounts,
                            backgroundColor: colors.slice(0, categoryNames.length),
                            borderColor: colors.slice(0, categoryNames.length).map(c => c + 'dd'),
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: { padding: 15, font: { size: 12 } }
                            }
                        }
                    }
                });
            }

            // Level Chart
            const levelCount = {};
            competences.forEach(c => {
                const level = c.maxLevel;
                levelCount[level] = (levelCount[level] || 0) + 1;
            });

            const levelNames = Object.keys(levelCount).sort((a, b) => a - b);
            const levelCounts = levelNames.map(l => levelCount[l]);

            const levelCtx = document.getElementById('levelChart');
            if (levelCtx) {
                new Chart(levelCtx, {
                    type: 'bar',
                    data: {
                        labels: levelNames.map(l => 'Level ' + l),
                        datasets: [{
                            label: 'Number of Competences',
                            data: levelCounts,
                            backgroundColor: 'rgba(245, 158, 11, 0.8)',
                            borderColor: '#f59e0b',
                            borderWidth: 2,
                            borderRadius: 5
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: { display: true, labels: { padding: 15, font: { size: 12 } } }
                        },
                        scales: {
                            y: { beginAtZero: true, ticks: { font: { size: 11 } } },
                            x: { ticks: { font: { size: 11 } } }
                        }
                    }
                });
            }
        }
    });
</script>
{% endblock %}
