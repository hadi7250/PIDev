{% extends 'base.html.twig' %}

{% block title %}Grade Students - EduConnect{% endblock %}

{% block content %}
<div class="container-fluid py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2 gradient-text mb-2">
                <i class="fas fa-pen-fancy me-2"></i>Grade Students
            </h1>
            <p class="text-muted">Review and grade student evaluations</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-bottom">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-sm" placeholder="Search by student or evaluation...">
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Student</th>
                                <th>Evaluation</th>
                                <th>Status</th>
                                <th>Score</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for evaluation in evaluations %}
                                <tr>
                                    <td><strong>Student Name</strong></td>
                                    <td>{{ evaluation.competence.name }}</td>
                                    <td><span class="badge bg-warning">Pending Review</span></td>
                                    <td><span class="text-muted">-</span></td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit me-1"></i>Grade
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">
                                        No evaluations to grade
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .gradient-text {
        background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
{% endblock %}
