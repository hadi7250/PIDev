{# templates/quiz/result.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Quiz Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #121212; color: #ffffff; }
        .card { background-color: #1e1e1e; color: white; border: none; }
        .text-violet { color: #a855f7; }
        .btn-outline-light:hover { background-color: #a855f7; border-color: #a855f7; }
        .score-box {
            font-size: 6rem;
            font-weight: bold;
            color: #a855f7;
            text-shadow: 0 0 20px rgba(168, 85, 247, 0.5);
        }
    </style>
</head>
<body>

<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-5">
                
                <h2 class="mb-4">Quiz Completed! üèÅ</h2>
                <h4 class="text-secondary">{{ quiz.title }}</h4>
                
                <hr class="border-secondary my-4">
                
                <p class="lead">Your Final Score</p>
                
                <div class="score-box mb-4">
                    {{ attempt.score }} <span class="fs-1 text-muted">/ {{ quiz.totalScore }}</span>
                </div>

                {% set percentage = (attempt.score / quiz.totalScore) * 100 %}
                {% if percentage >= 80 %}
                    <div class="alert alert-success bg-opacity-10 border-success text-success mb-4">
                        üéâ Amazing Job! You crushed it!
                    </div>
                {% elseif percentage >= 50 %}
                     <div class="alert alert-warning bg-opacity-10 border-warning text-warning mb-4">
                        üëç Good effort! You passed.
                    </div>
                {% else %}
                     <div class="alert alert-danger bg-opacity-10 border-danger text-danger mb-4">
                        üìö Keep studying! You can do better next time.
                    </div>
                {% endif %}

                <div class="d-grid gap-2">
                    <a href="{{ path('app_quiz_index') }}" class="btn btn-outline-light btn-lg">
                        ‚Üê Back to Quiz List
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>