{# templates/quiz/take.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Taking Quiz: {{ quiz.title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #121212; color: #ffffff; }
        .card { background-color: #1e1e1e; color: white; border: none; }
        .timer-box { position: sticky; top: 20px; z-index: 1000; box-shadow: 0 4px 6px rgba(0,0,0,0.5); }
        .btn-violet { background-color: #a855f7; color: white; font-weight: bold; border: none; }
        .btn-violet:hover { background-color: #9333ea; color: white; }
        .list-group-item { background-color: #2c2c2c; color: white; border-color: #444; }
        .list-group-item:hover { background-color: #3d3d3d; color: white; }
    </style>
</head>
<body>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2 class="mb-4 text-violet">{{ quiz.title }}</h2>
            
            <form method="POST" id="quizForm">
                {% for question in questions %}
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title fw-bold">Q{{ loop.index }}: {{ question.questionText }}</h5>
                                <span class="badge bg-primary h-50">{{ question.points }} pts</span>
                            </div>
                            
                            <hr class="border-secondary">
                            
                            <div class="list-group">
                                {% for option in question.options %}
                                    <label class="list-group-item list-group-item-action cursor-pointer">
                                        <input class="form-check-input me-2" type="radio" 
                                               name="q_{{ question.id }}" 
                                               value="{{ option }}">
                                        {{ option }}
                                    </label>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-warning">No questions found.</div>
                {% endfor %}

                <button type="submit" class="btn btn-violet btn-lg w-100 mb-5 py-3 fw-bold">Submit Answers âœ…</button>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card timer-box bg-dark text-white text-center border border-secondary">
                <div class="card-header bg-warning text-dark fw-bold">TIME REMAINING</div>
                <div class="card-body">
                    <h1 id="timer" class="display-3 fw-bold mb-0">00:00</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // TIMER LOGIC
    // Get time limit from PHP (minutes) and convert to seconds
    let timeLimit = {{ quiz.timeLimit }} * 60; 
    
    // Set the countdown date based on now + time limit
    let now = new Date().getTime();
    let countDownDate = now + (timeLimit * 1000);

    let x = setInterval(function() {
        let now = new Date().getTime();
        let distance = countDownDate - now;

        let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        let seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Display the result
        document.getElementById("timer").innerHTML = 
            (minutes < 10 ? "0" : "") + minutes + ":" + (seconds < 10 ? "0" : "") + seconds;

        // If the count down is finished, submit the form
        if (distance < 0) {
            clearInterval(x);
            document.getElementById("timer").innerHTML = "00:00";
            alert("Time is up! Submitting your answers automatically.");
            document.getElementById("quizForm").submit();
        }
    }, 1000);
</script>

</body>
</html>