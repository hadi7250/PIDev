  <script>
    $(document).ready(function () {
      // Clear password fields on page load
      $('#inputChoosePassword').val('');
      $('#inputConfirmPassword').val('');

      // Toggle password show/hide for main password
      $("#show_hide_password a").on('click', function (event) {
        event.preventDefault();
        const input = $('#show_hide_password input');
        const icon = $('#show_hide_password i');
        if (input.attr("type") === "text") {
          input.attr('type', 'password');
          icon.addClass("bi-eye-slash-fill").removeClass("bi-eye-fill");
        } else {
          input.attr('type', 'text');
          icon.removeClass("bi-eye-slash-fill").addClass("bi-eye-fill");
        }
      });

      // Toggle password show/hide for confirm password
      $("#show_hide_password_confirm a").on('click', function (event) {
        event.preventDefault();
        const input = $('#show_hide_password_confirm input');
        const icon = $('#show_hide_password_confirm i');
        if (input.attr("type") === "text") {
          input.attr('type', 'password');
          icon.addClass("bi-eye-slash-fill").removeClass("bi-eye-fill");
        } else {
          input.attr('type', 'text');
          icon.removeClass("bi-eye-slash-fill").addClass("bi-eye-fill");
        }
      });

      // Validation functions
      function validateEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
      }

      function showError(input, message) {
        const $input = $(input);
        $input.addClass('is-invalid');
        $input.removeClass('shake');
        void $input[0].offsetWidth; // force reflow
        $input.addClass('shake');

        if (!$input.next('.invalid-feedback').length) {
          $input.after(`<div class="invalid-feedback">${message}</div>`);
        } else {
          $input.next('.invalid-feedback').text(message);
        }
      }

      function clearError(input) {
        const $input = $(input);
        $input.removeClass('is-invalid shake');
        $input.next('.invalid-feedback').remove();
      }

      // Live validation on typing for Username
      $('#inputUsername').on('input', function () {
        const username = $(this).val().trim();
        if (username === '') {
          clearError(this);
        } else if (username.length < 3) {
          showError(this, "Username must be at least 3 characters.");
        } else {
          clearError(this);
        }
      });

      // Live validation on typing for Email
      $('#inputEmailAddress').on('input', function () {
        const email = $(this).val().trim();
        if (email === '') {
          clearError(this);
        } else if (!email.includes('@')) {
          showError(this, "Missing @ symbol.");
        } else if (email.indexOf('@') !== email.lastIndexOf('@')) {
          showError(this, "Only one @ symbol is allowed.");
        } else if (email.split('@')[1].length < 1) {
          showError(this, "Missing characters after @.");
        } else if (email.split('@')[1] && !email.split('@')[1].includes('.')) {
          showError(this, "Missing domain extension (e.g., .com).");
        } else if (!validateEmail(email)) {
          showError(this, "Enter a valid email.");
        } else {
          clearError(this);
        }
      });

      // Live validation on typing for Password
      $('#inputChoosePassword').on('input', function () {
        const password = $(this).val().trim();
        if (password === '') {
          clearError(this);
        } else if (password.length < 6) {
          showError(this, "Password must be at least 6 characters.");
        } else {
          clearError(this);
        }
        
        // Also validate confirm password when main password changes
        $('#inputConfirmPassword').trigger('input');
      });

      // Live validation for Confirm Password
      $('#inputConfirmPassword').on('input', function () {
        const confirmPassword = $(this).val().trim();
        const password = $('#inputChoosePassword').val().trim();
        
        if (confirmPassword === '') {
          clearError(this);
        } else if (confirmPassword !== password) {
          showError(this, "Passwords do not match.");
        } else {
          clearError(this);
        }
      });

      // Live validation for Country
      $('#inputSelectCountry').on('change', function () {
        if ($(this).val() === '' || $(this).val() === null) {
          showError(this, "Please select a country.");
        } else {
          clearError(this);
        }
      });

      // Terms & Conditions checkbox validation
      $('#flexSwitchCheckChecked').on('change', function () {
        if (!$(this).prop('checked')) {
          $(this).closest('.form-check').addClass('is-invalid');
        } else {
          $(this).closest('.form-check').removeClass('is-invalid');
        }
      });

      // Form submission validation
      $('form').on('submit', function (e) {
        let valid = true;
        
        // Check each field
        $('#inputUsername').trigger('input');
        $('#inputEmailAddress').trigger('input');
        $('#inputChoosePassword').trigger('input');
        $('#inputConfirmPassword').trigger('input');
        $('#inputSelectCountry').trigger('change');
        $('#flexSwitchCheckChecked').trigger('change');
        
        // Check if any field has error
        if ($('.is-invalid').length > 0) {
          e.preventDefault();
          Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Please fix the errors in the form before submitting.',
          });
        }
      });

      // Initial validation on page load (no errors should be shown)
      $('#inputUsername').trigger('input');
      $('#inputEmailAddress').trigger('input');
      $('#inputChoosePassword').trigger('input');
      $('#inputConfirmPassword').trigger('input');
      $('#inputSelectCountry').trigger('change');
    });
  </script>

