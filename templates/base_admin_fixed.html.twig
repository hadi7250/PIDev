<!doctype html>
<html lang="en" data-bs-theme="blue-theme">

<head>
  <meta charset="utf-8">
  <title>{% block title %}Forum Admin{% endblock %}</title>
  <!--favicon-->
  <link rel="icon" href="{{ asset('assets/images/favicon-32x32.png') }}" type="image/png">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Material+Icons+Outlined" rel="stylesheet">
  
  <!-- Simple CSS for admin panel -->
  <style>
    body {
        font-family: 'Noto Sans', sans-serif;
        background: #f5f5f5;
    }
    .sidebar {
        background: #2c3e50;
        min-height: 100vh;
        color: white;
    }
    .sidebar .nav-link {
        color: #ecf0f1;
        padding: 12px 20px;
        border-radius: 4px;
        margin: 2px 10px;
    }
    .sidebar .nav-link:hover {
        background: #34495e;
        color: white;
    }
    .sidebar .nav-link.active {
        background: #3498db;
        color: white;
    }
    .main-content {
        padding: 20px;
    }
    .card {
        border: none;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }
    .card-header {
        background: #fff;
        border-bottom: 1px solid #e3e6f0;
        font-weight: 600;
    }
    .page-header {
        background: #fff;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .btn {
        padding: 8px 16px;
        border-radius: 4px;
    }
    .table {
        background: #fff;
    }
    .table th {
        border-top: none;
        font-weight: 600;
        color: #2c3e50;
    }
    .material-icons-outlined {
        vertical-align: middle;
    }
    .avatar-sm {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }
    .bg-primary { background-color: #3498db !important; }
    .bg-success { background-color: #27ae60 !important; }
    .bg-warning { background-color: #f39c12 !important; }
    .bg-danger { background-color: #e74c3c !important; }
    .bg-info { background-color: #17a2b8 !important; }
    .text-primary { color: #3498db !important; }
    .text-success { color: #27ae60 !important; }
    .text-warning { color: #f39c12 !important; }
    .text-danger { color: #e74c3c !important; }
    .text-info { color: #17a2b8 !important; }
    .text-muted { color: #6c757d !important; }
    .bg-opacity-10 { opacity: 0.1; }
    .fs-6 { font-size: 1rem; }
    .fs-1 { font-size: 2.5rem; }
    .mb-0 { margin-bottom: 0 !important; }
    .mb-1 { margin-bottom: 0.25rem !important; }
    .me-2 { margin-right: 0.5rem !important; }
    .w-100 { width: 100% !important; }
    .py-4 { padding-top: 1.5rem !important; padding-bottom: 1.5rem !important; }
    .text-center { text-align: center !important; }
    .text-truncate { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
    .d-flex { display: flex !important; }
    .d-grid { display: grid !important; }
    .align-items-center { align-items: center !important; }
    .justify-content-between { justify-content: space-between !important; }
    .flex-grow-1 { flex-grow: 1 !important; }
    .gap-2 { gap: 0.5rem !important; }
    .timeline { position: relative; }
    .timeline-item { margin-bottom: 20px; }
    .timeline-point { 
        width: 30px; 
        height: 30px; 
        background: #3498db; 
        border-radius: 50%; 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        color: white; 
        position: absolute; 
        left: -15px; 
        top: 0;
    }
    .timeline-content { 
        margin-left: 30px; 
        padding-left: 20px; 
        border-left: 2px solid #e3e6f0; 
        padding-bottom: 20px;
    }
  </style>
</head>

<body>
  <!--start header-->
  <header class="topbar">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('admin_dashboard') }}">
          <h4 class="mb-0">Forum Admin</h4>
        </a>
        <div class="ms-auto">
          <a href="{{ path('app_forum_index') }}" class="btn btn-outline-secondary">
            <i class="material-icons-outlined">visibility</i> View Forum
          </a>
        </div>
      </div>
    </nav>
  </header>
  <!--end header-->

  <div class="container-fluid">
    <div class="row">
      <!--start sidebar-->
      <aside class="col-md-3 sidebar">
        <div class="p-3">
          <h5 class="text-white mb-3">Navigation</h5>
          <nav class="nav flex-column">
            <a class="nav-link" href="{{ path('admin_dashboard') }}">
              <i class="material-icons-outlined me-2">dashboard</i>Dashboard
            </a>
            <a class="nav-link" href="{{ path('admin_forum_categories') }}">
              <i class="material-icons-outlined me-2">category</i>Categories
            </a>
            <a class="nav-link" href="{{ path('admin_forum_discussions') }}">
              <i class="material-icons-outlined me-2">forum</i>Discussions
            </a>
            <a class="nav-link" href="{{ path('admin_forum_messages') }}">
              <i class="material-icons-outlined me-2">chat</i>Messages
            </a>
          </nav>
        </div>
      </aside>
      <!--end sidebar-->

      <!--start main content-->
      <main class="main-content col-md-9">
        {% block body %}{% endblock %}
      </main>
      <!--end main content-->
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  {% block javascripts %}{% endblock %}
</body>
</html>
